generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model Author {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String @unique
  password String

  role Role @default(USER)

  posts Post[]

  @@map("authors")
}

model Post {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String   @unique
  content   String?
  slug      String   @unique
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt() @map("updated_at")

  author   Author @relation(fields: [authorId], references: [id])
  authorId String @map("author_id") @db.ObjectId

  questions Question[]
  images    Image[]

  @@map("posts")
}

type Question {
  title  String
  answer String
}

type Image {
  name String
  type String
  url  String
}
